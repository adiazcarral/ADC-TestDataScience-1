   "source": [
    "# üìò Notebook 02: Training, Validation and Preprocessing\n",
    "This notebook handles dataset preprocessing (normalization, batching) and training of the models."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üõ† Set up Python path (use your actual path if needed)\n",
    "import sys\n",
    "import os\n",
    "sys.path.append(os.path.abspath(".."))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üì¶ Imports\n",
    "from src.models.logistic import LogisticClassifier\n",
    "from src.models.cnn import SimpleCNN\n",
    "from src.models.requiv_cnn import RotEqCNN\n",
    "from src.training.trainer import train_model\n",
    "from src.data.utils import load_filtered_rotated_dataset\n",
    "from torch.utils.data import DataLoader\n",
    "import torch\n",
    "import torchvision.transforms as transforms"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üîÑ Data transforms\n",
    "transform = transforms.Compose([\n",
    "    transforms.ToTensor(),\n",
    "    transforms.Normalize((0.5,), (0.5,))\n",
    "])"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üì• Load dataset\n",
    "train_set, val_set = load_filtered_rotated_dataset(train_ratio=0.8, transform=transform)\n",
    "train_loader = DataLoader(train_set, batch_size=64, shuffle=True)\n",
    "val_loader = DataLoader(val_set, batch_size=64)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üß† Initialize model\n",
    "device = torch.device("cuda" if torch.cuda.is_available() else "cpu")\n",
    "model = LogisticClassifier().to(device)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# üèãÔ∏è Train the model\n",
    "train_model(model, train_loader, val_loader, device=device, epochs=10)"
   ]
  }
